name: ğŸš€ Deploy Openote Release

on:
  workflow_run:
    workflows: ["Build & Generate Release"]
    types:
      - completed

jobs:
  deploy:
    runs-on: ubuntu-latest
    environment: production

    steps:
      - name: ğŸ” SSH Deploy
        uses: appleboy/ssh-action@v0.1.10
        with:
          host: ${{ secrets.DO_HOST }}
          username: ${{ secrets.DO_USER }}
          key: ${{ secrets.DO_SSH_KEY }}
          script: |
            set -e

            cd /home/openote

            echo "ğŸ›‘ Parando container app (se existir)"
            docker compose rm -sf app || true

            echo "â¬‡ï¸ Pull da imagem mais recente"
            docker compose pull app

            echo "ğŸš€ Subindo container com recriaÃ§Ã£o forÃ§ada"
            docker compose up -d --force-recreate app

            echo "ğŸ§¹ Limpando imagens antigas"
            docker image prune -f

            echo "âœ… Deploy finalizado com sucesso!"
